extends villain-forms.pug

mixin field(label, fieldType, fieldName, fieldValue, require)
    div.villian__input-field
        label(for=fieldName)= label
        input(type=fieldType name=fieldName value=fieldValue required=require)

block right
    a.villain__button-link(href="/users/login") Log In
    form.villain__signup-form(action="/users/sign-up" method="post")
        input(type="hidden" name="_csrf" value=csrfToken)
        +field("Title", "text", "title", title, false)
        +field("First Name", "text", "firstName", firstName, true)
        +field("Last Name", "text", "lastName", lastName, false)
        +field("Username", "text", "username", username, true)
        +field("Email", "email", "email", email, true)
        +field("Password", "password", "password", password, true)
        +field("Confirm Password", "password", "confirmPassword", "", true)
        button(type="submit") Register
