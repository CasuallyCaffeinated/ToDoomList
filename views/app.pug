extends layout.pug

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/app.css")
  
  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")

  link(rel="stylesheet" href="font-awesome-animation.min.css")
  //- add page specific js
  
  script(src='/javascripts/app-ploys.js' type="module")

  script(src='/javascripts/schemes.js' type="module")

  script(src="/javascripts/list-modal.js" type="module")

  script(src="/javascripts/rename-modal.js" type="module")

  script(src="/javascripts/remove-modal.js" type="module")



block content
  div.add-scheme-modal#add-scheme-modal
    .modal-content
      p.add-scheme-p Add a Scheme
      p Please enter a new scheme name:
      form
          input(id="modal-form" name='modal-form' type='text' required)
          div#modal-button-container
            button(type='submit' id="add-list") Add
            button(type='submit' id="exit-modal") Cancel
  div.rename-scheme-modal#rename-scheme-modal
    .modal-content
      p Rename the Scheme
      p Please enter a new scheme name:
      form
          input(id="rename-modal-form" name='modal-form' type='text' required)
          div#modal-button-container
            button(type='submit' class="rename-list") Rename
            button(type='submit' id="exit-rename-modal") Cancel
  div.remove-scheme-modal#remove-scheme-modal
    .modal-content
      p Remove the Scheme
      p Are you sure?:
        div#modal-button-container
          button(type='submit' class="remove-list") Remove
          button(type='submit' id="exit-remove-modal") Cancel
  div.main-container

    include app-navbar.pug
    include app-body.pug
  include app-footer.pug 